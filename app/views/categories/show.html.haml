- @category.newsletters.each do |newsletter|
  %section.container
    .list-group
      .row
        .col-md-1.text-center
          %br
          = link_to vote_newsletter_path(newsletter), method: "post" do
            %span.glyphicon.glyphicon-triangle-top.text-center
            %p= newsletter.votes.count
        .col-md-10
          %h4= link_to "#{newsletter.name}", newsletter_path(newsletter)
          %h6= fix_url(newsletter.website_url)
          .content
            = newsletter.description
            .row
            - newsletter.categories.each do |category|
              .span.btn.btn-default.btn-xs{:type => "button"}
                = link_to "#{category.name}", category_path(category), {:class =>"white_font"}
